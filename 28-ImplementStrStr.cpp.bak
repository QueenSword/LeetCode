#include <iostream>

using namespace std;

class Solution {
public:
    int strStr(char *haystack, char *needle) {
        int count = 0;
        while (*haystack != '\0') {
            int index = 0;
            while (*(needle + index) != '\0' && *(haystack + index) == *(needle + index)) {
                index ++;
            }
            if (*(needle + index) == '\0') {
                return count;
            }
            haystack ++;
            count ++;
        }
        return -1;
    }
};

int main() {
    Solution solution;
    char c1[] = "abcdef", c2[] = "bcd";
    cout << solution.strStr(c1, c2) << endl;
    return 0;
}
